html, body
    width 100%
    height 100%
    height -webkit-fill-available
    padding 0
    margin 0
    font-family: 'IBM Plex Sans', sans-serif;
    background #000000
    text-rendering optimizeLegibility
    overflow hidden !important
    font-weight 400

*::-webkit-scrollbar
    display none
*
    -ms-overflow-style: none
    scrollbar-width: none

h1
    position fixed
    margin 0
    padding 0
    top 20px
    left 20px
    z-index 100
    font-size 80px
    line-height 0.9em
    letter-spacing -0.02em
    word-break break-all
    pointer-events none
    text-decoration underline
    font-weight 700
    opacity 0
    transition opacity 0.6s
    
app-container
    width 100%
    height 100%
    height -webkit-fill-available
    position absolute
    display block
    scroll-snap-type y mandatory
    scroll-behavior: smooth;
    overflow-y scroll
    overflow-x hidden
    &.scrolling
        h1
         opacity 1
    app-about
        width 100vw
        height 100vh
        position relative
        top 0
        display block
        z-index auto
        .inner
            position relative
            top 0
            left 0
            width 100vw
            height 100%
    app-module
        width 100vw
        height 100%
        position relative
        scroll-snap-align: start;
        top 0
        display block
        z-index auto
        overflow hidden
        &.about
            color #ffffff
            font-family: 'IBM Plex Mono', monospace;
            font-size 14px
            line-height 1.3em
            .inner
                margin 120px 20px 20px 20px
                p
                    max-width 600px
                    a
                        color inherit
        app-slide
            width 100vw
            height 100%
            float left
            position relative
            display block
            overflow hidden
            transition opacity 0.6s
            app-asset, app-video
                width 100vw
                height 100%
                position absolute
                top 0
                left 0
            &.manual
                app-asset
                    transition opacity 0.2s
                    &.active
                        transition opacity 0.2s
            app-asset
                opacity 0
                transition opacity 1s
                &.active
                    opacity 1
                    transition opacity 1s
            *
                pointer-events none
            iframe
                border none
                position absolute
                top 50%
                left 50%
                transform translate3d( -50%, -50%, 0    )
        &.info
            app-slide
                opacity 0.3
            .info
                transform translate3d( 0, 0, 0 )
                opacity 1
                pointer-events auto
                .infoToggle
                    opacity 1
            .label
                transform translate3d( 0, 20px, 0 )

        .label
            opacity 0
            position absolute
            bottom 0px
            color #dedede
            pointer-events none
            font-family: 'IBM Plex Mono', monospace;
            font-size 11px
            transform translate3d( 0, -20px, 0 )
            transition transform 0.9s cubic-bezier(0.25, 1, 0.5, 1) , opacity 0.1s
            left 20px
            // padding 4px 10px 4px 10px
            margin 0
            padding 0
            pointer-events none
            list-style-type none
            border-radius 1px
            li
                margin 0
                padding 0
                line-height 1.27em
                &:first-child
                    font-weight 600
                    letter-spacing -0.02em
                    color #ffffff
                    &::before
                        content ' '
                a
                    color inherit
                &::before
                    content ''

        .info
            position absolute
            bottom 40px
            transform translate3d( 0, -40px, 0 )
            opacity 0
            transition transform 0.9s cubic-bezier(0.25, 1, 0.5, 1), opacity 0.6s
            font-family: 'IBM Plex Mono', monospace;
            font-size 12px
            line-height 1.27em
            color #ffffff
            max-width 480px
            padding 4px 10px 4px 20px
            pointer-events none
            .infoToggle
                transition opacity 0.6s 0.3s
                font-size 11px
                opacity 0
            a
                color inherit
            
        &.active
            &.info
                .label
                    opacity 0
                    transition transform 0.9s cubic-bezier(0.25, 1, 0.5, 1) , opacity 1s
            .label
                pointer-events auto
                opacity 1
                transition transform 0.9s cubic-bezier(0.25, 1, 0.5, 1) , opacity 1s