*::selection
	background rgba( 255, 0, 0, 1 )
html
	padding 0
	margin 0
	width 100%
	height 100%
body
	font-family 'IBM Plex Mono', monospace
	font-weight 300
	font-size 11px
	line-height 17px
	color #ffffff
	margin 0
	padding 0
	width 100%
	min-height 100%
	overflow hidden
	&.mobile
		#main
			#threeLayer
				opacity 0.5	
			#domLayer
				position absolute
				width 90vw
				margin-top -100px
				left 5vw
				#projectList
					#aboutBut
						display none
					#about
						opacity 1
					.project
						display none
	#bg
		position fixed
		z-index 0
		top 0
		left 0
		width 100vw
		height 100vh
		background radial-gradient( #333 10%, #161616 80% )
	
	&.projectLoaded
		overflow auto
	&.colorInvert
		color #000000
		#bg
			background #ddd
		#main
			#domLayer
				p
					span
						background rgba( 255, 255, 255, 0.5 )
						a
							background rgba( 0, 0, 0, 0.9 )
							color rgba( 255, 255, 255, 0.9 )
			
		#projectLayer
			color #ffffff
	#main
		position fixed
		z-index 1
		margin 0
		padding 0
		width 100%
		height 100%
		&.project
			#domLayer
				display none
	
		#threeLayer
			position fixed
			width 100vw
			height 100vh
			top 0
			left 0	
				
		#domLayer
			opacity 0
			position relative
			width 440px
			height 100vh
			margin-left 30px
			z-index 2
			transition opacity 1.4s
			p
				margin 0
				padding 0
				span
					background rgba( 255, 255, 255, 0.3 )
					a
						font-weight 400
						padding 0 4px
						background rgba( 255, 255, 255, 0.9 )
						color rgba( 0, 0, 0, 0.9 )
						text-decoration none
						&:hover
							animation pulse 1s infinite
						
			&.ready
				opacity 1
#aboutPage
	z-index 10
	position absolute
	width 100%
	background rgba( 0, 0, 0, 0.9 )
	min-height 100%
	font-size 42px
	line-height 60px
	display none
	
#projectLayer
	position relative
	z-index 2
	#closebut
		cursor w-resize
		position fixed
		z-index 0
		width 100vw
		height 100vh
		top 0
		left 0
		#modulesContainer
			pointer-events none
			.moduleCol
				opacity 0		
				
	.info
		pointer-events none
		position relative
		z-index 2
		height 100vh
		width 100vw
		// top 0
		// left 0
		// text-align center
		.inner
			position relative
			// pointer-events auto
			width 46vw
			left 2vw
			// top 50%
			// left 50%
			// margin-right -50%
			// transform translate( -50%, 0%)
			.title
			.copy
				margin-top 16px
				p
					a
						color inherit
	#preloader
		font-size 12px
		position fixed
		bottom 3vw
		left 2vw
		width 94vw
		transition opacity 0.5s
		&.loaded
			.inner
				animation pulse 1s infinite
	#modulesContainer
		pointer-events none
		position relative
		z-index 0
		width 96vw
		margin 0 auto 0
		content ""
		display table
		clear both
		.moduleCol
			width 47.8vw
			&#modulesLeft
				float left
			&#modulesRight
				float right
			
		.module
			position relative
			margin-bottom 0.4vw
			width 100%
			.overlay
				position absolute
				top 0
				left 0
				width 100%
				height 100%
				opacity 0
				background #666666
				.inner
					word-wrap break-word
			img
				width 100%
				height auto
				display block
			iframe
				width 100% !important
				height 100% !important
				display block
			video
				width 100%
				height auto
				display block
			&.code
				height 47vw

@keyframes pulse
	0%
		opacity 0
	50%
		opacity 1
	100%
		opacity 0