html
	padding 0
	margin 0
	width 100%
	// min-height 100%
body
	
	font-family 'IBM Plex Mono', monospace
	font-weight 200
	font-size 12px
	line-height 17px
	color #ffffff
	// background #222
	// background radial-gradient( #444444 10%, #222222 80% )
	
	margin 0
	padding 0
	width 100%
	// min-height 100%
	overflow hidden
	#bg
		position fixed
		z-index 0
		top 0
		left 0
		width 100vw
		height 100vh
		
		background radial-gradient( #222 10%, #111 80% )
	&.mobile
		#main
			#threeLayer
				opacity 0.5
			#contact
				left 5vw
				bottom 5vw
			#domLayer
				position absolute
				width 90vw
				margin-top -100px
				left 5vw
				#projectList
					#aboutBut
						display none
					#about
						opacity 1
					.project
						display none
	&.projectLoaded
		overflow auto
	&.colorInvert
		color #000000
		#bg
			background #ddd
		#main	
			#contact
				color #000000
				a
					color #000000
			#domLayer
				color #000000
				#projectList
					a
						color #000000
		#projectLayer
			&.scrolling
				.info
					.inner
						.title
							background #ffffff
						p
							background #ffffff
								
	#main
		position fixed
		z-index 1
		margin 0
		padding 0
		width 100%
		height 100%
		&.project
			#contact
				display none
			#domLayer
				display none
	
		#threeLayer
			position fixed
			width 100vw
			height 100vh
			top 0
			left 0	
		#contact
			color #ffffff
			position fixed
			bottom 2vw
			left 2vw
			a
				color #ffffff
				text-decoration none
				
		#domLayer
			// display none
			position absolute
			width 500px
			top 50%
			left 2vw
			// margin-right -50%
			transform translate( 0%, -50%)
			color #ffffff
			&.about
				#projectList
					#about
						opacity 1
				.project
					opacity 0
			#projectList
				letter-spacing 0px
				#about
					pointer-events none
					opacity 0
					position absolute
					&.active
						opacity 1
				a
					// text-transform uppercase
					text-decoration none
					color #ffffff
					&:hover
						// text-decoration underline
						animation pulse 0.3s infinite
#projectLayer
	position relative
	z-index 2
	#closebut
		cursor w-resize
		position fixed
		z-index 0
		width 100vw
		height 100vh
		top 0
		left 0
		#modulesContainer
			pointer-events none
			.moduleCol
				opacity 0
			#drawCanvas
				opacity 1		
				
	.info
		pointer-events none
		position fixed
		z-index 2
		height 100vh
		width 100vw
		top 0
		left 0
		// transition opacity 0.2s
		.inner
			position absolute
			pointer-events auto
			width 46vw
			top 50%
			left 2vw
			margin-right -50%
			transform translate(0, -50%)
			.title
			.copy
				margin-top 16px
				p
					a
						color inherit
	#preloader
		font-size 12px
		position fixed
		bottom 3vw
		left 2vw
		width 94vw
		transition opacity 0.5s
		&.loaded
			.inner
				animation pulse 1s infinite
	#modulesContainer
		pointer-events none
		position relative
		z-index 0
		width 96vw
		margin 100vh auto 0
		content ""
		display table
		clear both
		#drawCanvas
			opacity 0
			position absolute
			top 0
			left 0
			z-index 10
		.moduleCol
			width 47.8vw
			&#modulesLeft
				float left
			&#modulesRight
				float right
			
		.module
			position relative
			margin-bottom 0.4vw
			width 100%
			.overlay
				position absolute
				top 0
				left 0
				width 100%
				height 100%
				opacity 0
				background #666666
				.inner
					word-wrap break-word
			img
				width 100%
				height auto
				display block
			iframe
				width 100% !important
				height 100% !important
				display block
			video
				width 100%
				height auto
				display block
			&.code
				height 47vw

@keyframes pulse
	0%
		opacity 0
	50%
		opacity 1
	100%
		opacity 0