*::selection
	background rgba( 255, 0, 0, 1 )

::-webkit-scrollbar
	display: none;
#ie
	position fixed
	z-index 10000
	left 0
	width 100%
	height 100%
	pointer-events none
	background #000000
	color #ffffff
	top 10000px
	opacity 0
	&.active
		top 0
		opacity 1
html
	padding 0
	margin 0
	width 100%
	height 100%
body
	font-family 'IBM Plex Mono', monospace
	font-weight 300
	font-size 11px
	line-height 17px
	color #ffffff
	margin 0
	padding 0
	width 100%
	min-height 100%
	overflow hidden
	#messenger
		position fixed
		top 0
		left 0
		width 100%
		height 100%
		z-index 1000
		padding 30px
		pointer-events none
		opacity 0
		&.active
			opacity 1
			animation pulse 1s infinite
	&.projectLoaded
		overflow auto
		#projectLayer
			.info
				opacity 1
	&.colorInvert
		#main
			#bg
				background #ddd
			#domLayer
				p
					span
						color rgba( 0, 0, 0, 1 )
						background rgba( 255, 255, 255, 0.5 )
						a
							font-weight 400
							background rgba( 0, 0, 0, 0.9 )
							color rgba( 255, 255, 255, 0.9 )
			
		#projectLayer
			color #000000
			a
				background rgba( 0, 0, 0, 0.9 )
				color rgba( 255, 255, 255, 0.9 )
	#main
		position fixed
		z-index 1
		margin 0
		padding 0
		width 100%
		height 100%
		&.project
			#domLayer
				display none
		#bg
			position fixed
			z-index 0
			top 0
			left 0
			width 100vw
			height 100vh
			background radial-gradient( #333 10%, #161616 80% )
			cursor pointer
		#threeLayer
			position fixed
			width 100vw
			height 100vh
			top 0
			left 0
			pointer-events none
		#domLayer
			opacity 0
			position relative
			width 440px
			height 100vh
			margin-left 30px
			z-index 2
			transition opacity 0.6s
			p
				margin 0
				padding 0
				span
					color rgba( 255, 255, 255, 1 )
					background rgba( 255, 255, 255, 0.3 )
					a
						font-weight 500
						padding 0 4px
						background rgba( 255, 255, 255, 0.9 )
						color rgba( 0, 0, 0, 0.9 )
						text-decoration none
						&:hover
							animation pulse 1s infinite
						
			&.ready
				opacity 1

	#projectLayer
		position relative
		z-index 2
		a
			text-decoration none
			background rgba( 255, 255, 255, 0.9 )
			color rgba( 0, 0, 0, 0.9 )
			padding 0 4px
		#closebut
			font-weight 500
			z-index 10
			position fixed
			top 2vw
			left 2vw
		.info
			pointer-events none
			position relative
			z-index 2
			height 100vh
			width 100vw
			opacity 0
			transition opacity 0.6s
			.inner
				position absolute
				pointer-events auto
				width 46vw
				left 2vw
				bottom 60px
				.title
				.copy
					margin-top 16px

		#preloader
			position fixed
			bottom 3vw
			left 2vw
			width 94vw
			&.loaded
				.inner
					animation pulse 1s infinite
		#modulesContainer
			position relative
			z-index 0
			width 96vw
			margin 0 auto 0
			content ""
			display table
			clear both
			.moduleCol
				width 47.8vw
				&#modulesLeft
					float left
				&#modulesRight
					float right
				
			.module
				position relative
				margin-bottom 0.4vw
				width 100%
				.overlay
					position absolute
					top 0
					left 0
					width 100%
					height 100%
					opacity 0
					background #666666
					.inner
						word-wrap break-word
				img
					width 100%
					height auto
					display block
				iframe
					width 100% !important
					height 100% !important
					display block
				video
					width 100%
					height auto
					display block
				&.code
					height 47vw
	.mobileOnly
		display none
body	
	&.mobile
		
		font-size 12px
		line-height 16px
		font-weight 700
		// overflow auto
		.mobileOnly
			display inline
		#main
			overflow-y scroll
			-webkit-overflow-scrolling touch
			#threeLayer
				opacity 1
				pointer-events auto
			#domLayer
				position relative
				width 94vw
				left 3vw
				margin-left 0
				height 100vh
				margin-bottom 20px
				&.clone
					padding-top 0
				.cont
					padding-top 37vh
					p
						&.filler
							display none
						span
							color rgba( 0, 0, 0, 0.8 )
							background rgba( 255, 255, 255, 0.8 )
							.mobileOnly
								background rgba( 255, 255, 255, 0 )
							a
								font-weight 700
								background rgba( 0, 0, 0, 0 )
								color rgba( 0, 0, 255, 0.9 )
								&.active
									background rgba( 0, 0, 255, 1 )
									color rgba( 255, 255, 255, 0.9 )
		#projectLayer
			font-weight 400
			.info
				height auto
				.inner
					position relative
					pointer-events auto
					width 94vw
					left 3vw
					padding-top 80vh
					.title
					.copy
						margin-top 16px
			#preloader
				&.loaded
					opacity 0
			#modulesContainer
				pointer-events auto
					
@keyframes pulse
	0%
		opacity 0
	50%
		opacity 1
	100%
		opacity 0