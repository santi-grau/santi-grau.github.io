html
	height 100%
	padding 0
	margin 0

body
	font-family -apple-system, BlinkMacSystemFont, Helvetica, sans-serif
	font-weight 300
	font-size 11px
	background #ffffff
	color #444444
	// margin 0
	padding 10px
	#main
		padding 20px
		#intro
			max-width 480px
			margin-bottom 24px
			p
				margin 0
				margin-bottom 12px
				padding 0
				b
					font-weight 700
		.project
			margin-bottom 30px
			.inner
				border solid 1px #444444
				height calc( 100vw * 0.6 )
			&#eina
				.inner
					background #e1e1e1
					.frame
						position relative
						width calc( 100vw * 0.5 )
						height calc( 100vw * 0.5 )
						margin calc( 100vw * 0.05 ) auto
						img
							position absolute
							top 0
							left 0
							width 100%
							height 100%
							z-index 0
							&.active
								z-index 1
			&#ar
				.inner
					position relative
					overflow hidden
					video
						opacity 0
						transition opacity 0.4s
						position absolute
						top 0
						left 0
						&.active
							opacity 1
			
					